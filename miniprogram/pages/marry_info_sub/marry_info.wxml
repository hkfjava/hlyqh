<image class="bg" src="/images/bj_2.png">
</image>
<form bindsubmit="formSubmit" >
  <view class="content">
    <view>
      <input name="man_name" bindblur="nameChange" placeholder-class="phcolor" placeholder="输入新郎姓名" />
    </view>
    <view>
      <input name="woman_name" bindblur="nameChange" placeholder-class="phcolor" placeholder="输入新娘姓名" />
    </view>
    <view>
      <input name="marry_time" type="date" bindblur="phoneChange" placeholder-class="phcolor" placeholder="输入结婚时间" />
    </view>
   
    <view>
      <input name="marry_address" placeholder-class="phcolor" placeholder="输入结婚地点" />
    </view>
    <button form-type="submit">提交</button>
  </view>
</form>
